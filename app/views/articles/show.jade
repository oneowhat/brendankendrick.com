extends layout

block articles
  if user
    a(href='/articles/' + article.title.replace(/ /g, "-") + '/edit') Edit
  
  include article
  
  #comments
    if (article.commentCount > 0)
      h4 #{article.commentCount} Comments
      each comment in article.comments
        include ../comments/comment
  #comment-form
    h4 Leave a Comment
    .page-pad
      include ../comments/form
    
  script(src='/javascripts/comment.js')
